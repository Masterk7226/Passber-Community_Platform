{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix ./functions/ run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "Community",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
          {
            "source": "/Community",
            "destination": "/Community.html"
          },
          { "source": "/ABCClub",
            "destination": "/ABCClub.html"
          },
          { "source": "/login",
            "destination": "/index.html"
          },
          { "source": "/index",
            "destination": "/index.html"
          },
          { "source": "/InstantMessage/*",
            "destination": "/InstantMessage/InstantMessage.html"
          }
        ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
